<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_entity_own_msg_drawable"
            android:gravity="right"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/lbl_chatentity_ownmsg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="240dp"
                android:minWidth="80dp"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:id="@+id/lbl_chatentity_ownmsg_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Dienstag 14:31"
                    android:textColor="#CCC"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/lbl_chatentity_triangle2"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            android:background="@drawable/triangle_reverse"
            android:text=" " />
    </LinearLayout>

</merge>